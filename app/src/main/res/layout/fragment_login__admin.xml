<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.Login_AdminFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/logueoadmin">

        <ImageView
            android:layout_width="@dimen/tamaniologologin"
            android:layout_height="@dimen/tamaniologologin"
            android:src="@drawable/logo_aph"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tituloadmin"
            android:textSize="@dimen/tamaniotitulologin"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitleadmin1"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/tamaniosubtitilologin"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitleadmin2"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/tamaniosubtitilologin"/>

        <EditText
            android:id="@+id/codigoadmin"
            android:layout_width="@dimen/anchologueo"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"
            android:hint="@string/codigoadmin"
            android:minHeight="48dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_gravity="center"
            android:background="@color/colorboton">

            <Button
                android:id="@+id/botonloginadmin"
                android:layout_width="@dimen/anchobotonlogin"
                android:layout_height="wrap_content"
                android:backgroundTint="#CAF0F8"
                android:text="@string/botoningresar"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="0dp"
            android:layout_gravity="center"
            android:background="@color/colorboton" >

            <Button
                android:id="@+id/btnback"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#CAF0F8"
                android:text="ATRAS"
                android:textColor="@color/black"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>