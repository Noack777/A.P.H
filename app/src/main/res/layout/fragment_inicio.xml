                        android:layout_marginTop="10dp"
                        android:hint="@string/c_atencion" />

                    <EditText
                        android:id="@+id/b2_date4"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/f_atencion" />

                </LinearLayout>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>

                    //Final de Informacion Bloque 2

                    //Inicio de Informacion Bloque 3



                    <TextView
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/d_personal"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

