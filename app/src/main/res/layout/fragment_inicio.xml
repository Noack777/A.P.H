                        android:gravity="center">

                    <EditText
                        android:id="@+id/b3_date1"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/p_apellido" />

                    <EditText
                        android:id="@+id/b3_date2"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/s_apellido"/>

                    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/b3_date3"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/nombres"/>

                    <EditText
                        android:id="@+id/b3_date4"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/t_documento"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/b3_date5"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/n_documento"/>

                    <EditText
                        android:id="@+id/b3_date6"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/eps"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/b3_date7"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/m_pre"/>

                    <EditText
                        android:id="@+id/b3_date8"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/genero"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/b3_date9"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/f_nacimiento"/>

                    <EditText
                        android:id="@+id/b3_date10"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/edad"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/b3_date11"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/ciudad"/>

                    <EditText
                        android:id="@+id/b3_date12"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/telefono"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/b3_date13"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/direccion"/>

                    <EditText
                        android:id="@+id/b3_date14"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/f_a"/>

                </LinearLayout>

                    <EditText
                        android:id="@+id/b3_date15"
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/contacto"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>

                    //Final de Informacion bloque 3
                    //Inicio de Informacion bloque 4 "Motivo de la Consulta"

                    <TextView
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="@string/m_consulta"
                        android:textColor="@color/black"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <EditText
                        android:id="@+id/b4_date1"
                        android:layout_width="@dimen/anchocuadrado"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/descripcion_2"
                        android:background="@drawable/stylo_bordes"/>

                    //"Enfermedad Actual

                    <TextView
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="@string/enfermedad"
                        android:textColor="@color/black"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <EditText
                        android:id="@+id/b4_date2"
                        android:layout_width="@dimen/anchocuadrado"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/descripcion_3"
                        android:background="@drawable/stylo_bordes"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="@string/r_sistemas"
                        android:textColor="@color/black"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp"/>

                    <EditText
                        android:id="@+id/b4_date3"
                        android:layout_width="@dimen/anchocuadrado"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/c_1"/>

                    <EditText
                        android:id="@+id/b4_date4"
                        android:layout_width="@dimen/anchocuadrado"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/c_2"/>

                    <EditText
                        android:id="@+id/b4_date5"
                        android:layout_width="@dimen/anchocuadrado"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:hint="@string/c_3"/>

                    //Antecedentes

                    <TextView
                        android:layout_width="@dimen/anchogen"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:text="@string/antecedentes"
                        android:textColor="@color/black"/>





                </LinearLayout>

            </androidx.cardview.widget.CardView>


            </ScrollView>

        </LinearLayout>

</FrameLayout>